          </svg>
        <button type="button" class=" fog"  data-id="fog-0"></button>
        <button type="button" class=" fog" data-id="fog-1"></button>
        <button type="button" class=" fog" data-id="fog-2"></button>
        <button type="button" class=" fog" data-id="fog-3"></button>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-plus-fill" viewBox="0 0 16 16">
          <path d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2zm.5 4v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 1 0z"/>
        </svg>
      </div>
      <div class="color-buttons__weather">
        <div class="header__mini__switch">Gwiazdy/Kontelacje:</div>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" checked role="switch" id="SwitchTable">
        </div>
      </div>
    </div>
    </div>

      <table class="table" id="stars-table">
        <thead>
          <tr>
            <th>Nazwa</th>
            <th>Współrzędne</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody >
          <% stars.forEach((row, index) => { %>
          <tr class="align-middle">
            <td> <img src="<%=row.image%>"class="small_img" /></td>
            <td class="record"> <%=row.name  %></td>
            <td> <%=row.coordinate  %></td>
            <td> 
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" checked role="switch" id="flexSwitchCheckDefault">
              </div>
              <!-- <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
              <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a> -->
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <table class="table d-none" id="constellations-table"  >
        <thead>
          <tr>
            <th>Nazwa</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody >
          <% constellations.forEach((row, index) => { %>
          <tr class="align-middle">
            <td> <img src="<%=row.image%>"class="small_img" /></td>
            <td class="record"> <%=row.name  %></td>
            <td> 
              <div class="form-check form-switch">
                <input class="form-check-input constellation" data-constellation-id="<%= constellations._id %>" type="checkbox" checked role="switch" id="constellation-<%= constellations._id %>">              </div>
              <!-- <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
              <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a> -->
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
      <% if (constellations!=''  ) { %>  
      <% }  else { %>
      <h1 class="text-center text-secondary mt-5">Nie znaleziono żadnego obiektu w bazie</h1>>
      <% } %>
      <% if (stars!=''  ) { %>  
        <% }  else { %>
        <h1 class="text-center text-secondary mt-5">Nie znaleziono żadnego obiektu w bazie</h1>>
        <% } %>
    </div>
  </div>
  <div class="right__content">
    <div class="container__sky" id="container__sky">
          <div class="clouds clouds__1"></div>
          <img id="clouds1" class="clouds" src="cloud__1-min.png" alt="cloud">
          <img id="clouds2" class="clouds" src="cloud__2-min.png" alt="cloud">
          <img id="clouds3" class="clouds" src="cloud__3-min.png" alt="cloud">
          <img id="clouds4" class="clouds" src="cloud__4-min.png" alt="cloud">
  
          <img id="moon-0" class="moon" src="moon0.png" alt="moon">
          <img id="moon-1" class="moon" src="moon1.png" alt="moon">
          <img id="moon-2" class="moon" src="moon2.png" alt="moon">
          <img id="moon-3" class="moon" src="moon3.png" alt="moon">
          <img id="moon-4" class="moon" src="moon4.png" alt="moon">
          <img id="moon-5" class="moon" src="moon5.png" alt="moon">
          <img id="moon-6" class="moon" src="moon6.png" alt="moon">
        <% stars.forEach((row, index) => { %>
          <div class="star" id="star-<%= index + 1 %>" data-id="<%= row._id %>">
            <p class="name"><%= row.name %></p>
          </div>
        <% }) %>
        <% constellationStars.forEach((star, index) => { %>
          <div class="star-constellation" id="star-<%= index + 1 %>" data-id="<%= star._id %>" data-constellation-id="<%= star.constellationId %>">
            <p class="name"><%= star.name %></p>
          </div>
        <% }) %>
    </div>
</div>
</div>

